{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://chyappy.v3.0/schemas/ally_intent.json",
  "title": "Ally Intent Message",
  "description": "Schema for cognitive intent messages from Ally in Chyappy v3.0 protocol",
  "type": "object",
  "required": [
    "type",
    "source",
    "intent",
    "confidence",
    "msg-sent-timestamp"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "ally_intent",
      "description": "Message type identifier"
    },
    "source": {
      "type": "string",
      "description": "Source component generating the intent",
      "examples": ["ally_overlay", "cognitive_processor"]
    },
    "intent": {
      "type": "string",
      "description": "The identified intent or command",
      "examples": ["navigate_to_location", "pick_up_object", "answer_question", "execute_tool"]
    },
    "slots": {
      "type": "object",
      "description": "Extracted parameters and entities from the intent",
      "additionalProperties": true,
      "examples": [
        {
          "location": {"x": 5.2, "y": 3.1, "theta": 0.0},
          "speed": 0.5
        },
        {
          "object_name": "red_cube",
          "target_location": "table"
        }
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence score for the intent classification"
    },
    "context": {
      "type": "object",
      "description": "Contextual information for the intent",
      "properties": {
        "user_input": {
          "type": "string",
          "description": "Original user input that generated this intent"
        },
        "conversation_history": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Relevant conversation context"
        },
        "world_state": {
          "type": "object",
          "description": "Current world state information",
          "additionalProperties": true
        },
        "user_id": {
          "type": "string",
          "description": "Identifier of the user who generated the intent"
        },
        "session_id": {
          "type": "string",
          "description": "Session identifier"
        }
      },
      "additionalProperties": true
    },
    "alternatives": {
      "type": "array",
      "description": "Alternative intent interpretations with lower confidence",
      "items": {
        "type": "object",
        "properties": {
          "intent": {
            "type": "string"
          },
          "slots": {
            "type": "object",
            "additionalProperties": true
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          }
        },
        "required": ["intent", "confidence"]
      }
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high", "urgent"],
      "default": "normal",
      "description": "Priority level for intent processing"
    },
    "requires_confirmation": {
      "type": "boolean",
      "default": false,
      "description": "Whether this intent requires user confirmation before execution"
    },
    "safety_classification": {
      "type": "string",
      "enum": ["safe", "moderate", "dangerous", "critical"],
      "default": "safe",
      "description": "Safety classification of the intended action"
    },
    "msg-sent-timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when message was sent"
    },
    "correlation_id": {
      "type": "string",
      "description": "Optional correlation ID for message tracking"
    }
  },
  "additionalProperties": false
}