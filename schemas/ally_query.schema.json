{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://chyappy.v3.0/schemas/ally_query.json",
  "title": "Ally Query Message",
  "description": "Schema for system query messages in Chyappy v3.0 protocol",
  "type": "object",
  "required": [
    "type",
    "source",
    "query_type",
    "msg-sent-timestamp"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "ally_query",
      "description": "Message type identifier"
    },
    "source": {
      "type": "string",
      "description": "Source component making the query",
      "examples": ["ally_overlay", "cognitive_processor", "ui_client"]
    },
    "query_type": {
      "type": "string",
      "enum": [
        "system_status",
        "robot_status", 
        "world_state",
        "capabilities",
        "active_streams",
        "tool_availability",
        "memory_stats",
        "performance_metrics",
        "safety_status",
        "user_context"
      ],
      "description": "Type of information being queried"
    },
    "parameters": {
      "type": "object",
      "description": "Query-specific parameters",
      "properties": {
        "component": {
          "type": "string",
          "description": "Specific component to query (optional)"
        },
        "time_range": {
          "type": "object",
          "properties": {
            "start": {
              "type": "string",
              "format": "date-time"
            },
            "end": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "filters": {
          "type": "object",
          "additionalProperties": true,
          "description": "Additional filters for the query"
        },
        "format": {
          "type": "string",
          "enum": ["summary", "detailed", "raw"],
          "default": "summary",
          "description": "Level of detail in the response"
        }
      },
      "additionalProperties": true
    },
    "response_data": {
      "type": "object",
      "description": "Query response data (present in response messages)",
      "additionalProperties": true
    },
    "context": {
      "type": "object",
      "description": "Context information for the query",
      "properties": {
        "user_id": {
          "type": "string"
        },
        "session_id": {
          "type": "string"
        },
        "request_id": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "msg-sent-timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when message was sent"
    },
    "correlation_id": {
      "type": "string",
      "description": "Optional correlation ID for message tracking"
    }
  },
  "additionalProperties": false
}